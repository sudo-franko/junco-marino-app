<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerCuenta">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="DATOS DE LA CUENTA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:text="NOMBRES"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="nombre"
        android:textSize="18sp"
        android:id="@+id/tvNombreCuenta"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:text="CORREO"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="correo"
        android:textSize="18sp"
        android:id="@+id/tvCorreoCuenta"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:text="TELEFONO"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="telefono"
        android:textSize="18sp"
        android:id="@+id/tvTelefonoCuenta"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginStart="10sp"
        android:text="DIRECCION"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="20sp"
        android:text="direccion"
        android:textSize="18sp"
        android:id="@+id/tvDireccionCuenta"/>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="ACTUALIZAR DATOS"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnCerrarCuenta"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="CERRAR CUENTA"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>